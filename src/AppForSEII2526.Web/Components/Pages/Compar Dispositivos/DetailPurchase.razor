@page "/purchase/detailpurchase"

@using AppForSEII2526.Web.API
@using Microsoft.AspNetCore.Authorization

@inject AppForSEII2526APIClient apiclient

@attribute [Authorize] 

<h3>Purchase Details</h3>

@if (purchase == null)
{
    <p>@error</p>
}
else
{
    <table class="table table-borderless table-sm">
        <tr>
            <th>Name and Surname</th>
            <td id="NameSurname">
                @purchase.CustomerName @purchase.CustomerSurname
            </td>
        </tr>

        <tr>
            <th>Delivery Address</th>
            <td id="DeliveryAddress">
                @purchase.DeliveryAddress
            </td>
        </tr>

        <tr>
            <th>Payment Method</th>
            <td id="PaymentMethod">
                @purchase.PaymentMethod
            </td>
        </tr>

        <tr>
            <th>Purchase Date</th>
            <td id="PurchaseDate">
                @purchase.PurchaseDate.ToString("dd/MM/yyyy HH:mm:ss")
            </td>
        </tr>
    </table>

    <h4>Purchased Devices</h4>

    <table class="table" id="PurchasedDevices">
        <thead>
            <tr>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Color</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in purchase.PurchaseItems)
            {
                <tr id="PurchaseItem_@item.DeviceID">
                    <td>@item.Brand</td>
                    <td>@item.Model</td>
                    <td>@item.Color</td>
                    <td>@item.PriceForPurchase €</td>
                    <td>@item.Quantity</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th scope="row" colspan="4" class="text-end">Total Price</th>
                <td colspan="2" id="TotalPrice">
                    @purchase.TotalPrice €
                </td>
            </tr>
        </tfoot>
    </table>
}

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "id")]
    public int PurchaseID { get; set; }
    private PurchaseDetailDTO purchase;
    private string error = "";

    [CascadingParameter]
    private Task<AuthenticationState>? authenticationState { get; set; }

    protected override async Task OnInitializedAsync()
    {
        string userName = "";
        if (authenticationState is not null)
        {
            var authState = await authenticationState;
            var user = authState?.User;

            if (user is not null)
            {
                if (user.Identity is not null && user.Identity.IsAuthenticated && user.IsInRole("User"))
                {
                    userName = user.Identity.Name;
                }
            }
        }

        try
        {
            purchase = await apiclient.GetPurchaseAsync(PurchaseID);
        }
        catch (ApiException)
        {
            purchase = null;
        }

        // AUTHORIZATION CHECK
        if (purchase == null)
        {
            error = $"Error! You are not authorized to see this purchase or there is not a purchase with id={PurchaseID}";
        }
    }
}


