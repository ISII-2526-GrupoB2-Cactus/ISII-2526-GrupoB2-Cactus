@page "/reviews/createreview"
@inject NavigationManager navigation
@using AppForSEII2526.Web.Components.Shared
@using AppForSEII2526.Web.API
@using Microsoft.AspNetCore.Authorization
@inject AppForSEII2526APIClient apiclient
@inject ILogger<CreateReview> logger
@inject ReviewStateContainer reviewState

@*@attribute [Authorize]*@

<h3>Create Review</h3>


<EditForm Model="review" OnValidSubmit="OpenDialog">
    <div class="row">
        <DataAnnotationsValidator />
        <ValidationSummary class="row alert alert-danger" />
    </div>
    <div class="row alert alert-danger" role="alert" hidden="@hideErrors">
        <p id="ErrorsShown">Errors: @messageError</p>
    </div>
    <div class="row g-3">
        <div class="col-md">
            <div class="form-floating mb-3">
                <InputText @bind-Value="review.ReviewTitle" class="form-control" id="ReviewTitle" />
                <label for="ReviewTitle">Review Title</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating mb-3">
                <InputText @bind-Value="review.CustomerCountry" class="form-control" id="CustomerCountry" />
                <label for="CustomerCountry">Country</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating mb-3">
                <InputText @bind-Value="review.CustomerUserName" class="form-control" id="CustomerUserName" />
                <label for="CustomerUserName">User Name (optional)</label>
            </div>
        </div>
    </div>

    <h4>Review detail</h4>
    <p><b>Average Rating:</b> @AverageRatingDisplay</p>
    <p>
        <button class="btn btn-outline-primary" type="submit" @onclick="ModifyReviewItems" id="ModifyDevices">
            Modify devices
        </button>
    </p>

    <div class="mh-100 table-responsive">
        <table class="table table-condensed table-hover" id="TableOfReviewItems">
            <thead>
                <tr>
                    <th>Device</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Rating</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in review.ReviewItems)
                {
                    <tr id="DeviceData_@item.Id">
                        <td>@item.Name</td>
                        <td>@item.Model</td>
                        <td>@item.Year</td>
                        <td>
                            <InputSelect class="form-select" @bind-Value="item.Rating" id="@($"rating_{item.Id}")">
                                <option value="1">1 ★</option>
                                <option value="2">2 ★★</option>
                                <option value="3">3 ★★★</option>
                                <option value="4">4 ★★★★</option>
                                <option value="5">5 ★★★★★</option>
                            </InputSelect>
                        </td>
                        <td><InputTextArea @bind-Value="item.Comments" class="form-control" id="@($"comments_{item.Id}")" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row g-2">
        <div class="col-md">
            <div class="form-floating">
                @*this button will be used to ask the user if he want to proceed to publish the review*@
                <button class="btn btn-primary" type="submit" id="Submit" disabled="@reviewButtonDisabled">
                    Publish your review
                </button>
            </div>
        </div>
    </div>
</EditForm>

@*a modal popup dialog for checking if user wants to proceed to publish*@
@if (DialogIsOpen)
{
    <Dialog Caption="Publish review"
            Message="Do you want to proceed to publish this review?"
            OnClose="@OnDialogClose"
            Type=Dialog.Category.SaveNot>
    </Dialog>
}

@code {
    private string messageError = "";
    private bool hideErrors { get { return messageError.Length == 0; } }

    //reviewbutton will be disabled if there are not devices in the review
    private bool reviewButtonDisabled
    {
        get
        {
            return (review.ReviewItems == null || review.ReviewItems.Count == 0);
        }
    }

    private bool DialogIsOpen;

    // Calculate average rating for display
    private string AverageRatingDisplay
    {
        get
        {
            if (review.ReviewItems == null || !review.ReviewItems.Any())
                return "0 / 5";

            var average = review.ReviewItems.Average(r => r.Rating);
            return $"{average:F1} / 5";
        }
    }

    private void ModifyReviewItems()
    {
        navigation.NavigateTo("/review/selectdevicesforreview");
    }

    private ReviewForCreateDTO review => reviewState.Review;

    private void OpenDialog()
    {
        DialogIsOpen = true;
    }

    private async Task OnDialogClose(bool isOk)
    {

        DialogIsOpen = false;
        if (isOk)
        {
            // Process the data introduced by the user if they are valid
            if (review.ReviewItems.Count > 0)
            {
                try
                {
                    var createdReview = await apiclient.CreateReviewAsync(review);
                    reviewState.ReviewProcessed();
                    navigation.NavigateTo($"/review/detailreview/?ReviewID={createdReview.Id}");
                }
                catch (ApiException<ValidationProblemDetails> apiexceptionvalidation)
                {

                    if (apiexceptionvalidation.Result.Errors.Values != null)
                    {
                        messageError = "";
                        foreach (var errors in apiexceptionvalidation.Result.Errors.Values)
                            //https://learn.microsoft.com/en-us/dotnet/api/system.string.join?view=net-7.0
                            messageError = string.Join("(*) ", messageError, string.Join(" (*) ", errors));
                    }
                }
                catch (ApiException apiexception)
                {
                    //we need to inform user that there was some other error while processing the request
                    messageError = "Error while processing your request, please try again later!";

                }

            }
        }
    }

    protected override async Task OnInitializedAsync()
    {

        if (authenticationState is not null)
        {
            var authState = await authenticationState;
            var user = authState?.User;

            if (user is not null)
            {
                if (user.Identity is not null && user.Identity.IsAuthenticated)
                {
                    review.CustomerUserName = user.Identity.Name;
                }
            }
            review.ReviewTitle = review.ReviewTitle == null ? "" : review.ReviewTitle;
            review.CustomerCountry = review.CustomerCountry == null ? "" : review.CustomerCountry;
            review.CustomerUserName = review.CustomerUserName == null ? "" : review.CustomerUserName;

        }
    }


    [CascadingParameter]
    private Task<AuthenticationState>? authenticationState { get; set; }
}