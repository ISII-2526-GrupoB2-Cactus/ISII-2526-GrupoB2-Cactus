@page "/reviews/createreview"
@inject NavigationManager navigation
@using AppForSEII2526.Web.API
@using Microsoft.AspNetCore.Authorization
@inject AppForSEII2526APIClient apiclient
@inject ILogger<CreateReview> logger
@inject ReviewStateContainer reviewState
@*
    Nota: Asegúrate de que el componente Dialog esté en un lugar accesible
    y que la ruta a los DTOs sea correcta.
*@

@attribute [Authorize]

<h3>Crear Reseña</h3>

@* review es el objeto que será editado gracias al formulario *@
<EditForm Model="review" OnValidSubmit="OpenDialog">
    <div class="row">
        <DataAnnotationsValidator />
        <ValidationSummary class="row alert alert-danger" />
    </div>
    <div class="row alert alert-danger" role="alert" hidden="@hideErrors">
        <p id="ErrorsShown">Errores: @messageError</p>
    </div>
    <div class="row g-3">
        <div class="col-md">
            <div class="form-floating mb-3">
                <InputText @bind-Value="review.ReviewTitle" class="form-control" id="ReviewTitle" />
                <label for="ReviewTitle">Título de la Reseña</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating mb-3">
                <InputText @bind-Value="review.CustomerCountry" class="form-control" id="CustomerCountry" />
                <label for="CustomerCountry">País</label>
            </div>
        </div>
        <div class="col-md">
            <div class="form-floating mb-3">
                <InputText @bind-Value="review.CustomerUserName" class="form-control" id="CustomerUserName" />
                <label for="CustomerUserName">Nombre de Usuario</label>
            </div>
        </div>
    </div>
    <div class="row g-2">
        <div class="col-md">
            <div class="form-floating">
                @* este botón se usará para preguntar al usuario si quiere proceder a crear la reseña *@
                <button class="btn btn-primary" type="submit" id="Submit" disabled="@reviewButtonDisabled">
                    Crear tu reseña
                </button>
            </div>
        </div>
    </div>
    <h4>Detalle de la reseña</h4>
    <p><b>Puntuación promedio:</b> @AverageRating ⭐</p>
    <p>
        <b>Total dispositivos:</b> @review.ReviewItems.Count
        <button class="btn btn-outline-primary" type="button" @onclick="ModifyReviewItems" id="ModifyDevices">
            Modificar dispositivos
        </button>
    </p>
    
    <div class="mh-100 table-responsive">
        <table class="table table-condensed table-hover" id="TableOfReviewItems">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Modelo</th>
                    <th>Año</th>
                    <th>Puntuación</th>
                    <th>Comentario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in review.ReviewItems) {
                    <tr id="DeviceData_@item.Name">
                        <td>@item.Name</td>
                        <td>@item.Model</td>
                        <td>@item.Year</td>
                        <td>
                            @* 💡 CORRECCIÓN CRÍTICA: Se añade TValue="int" para asegurar el binding correcto de string a int *@
                            <InputSelect TValue="int" class="form-select" @bind-Value="@item.Rating" id="@($"rating_{item.Id}")">
                                <option value="1">1 ⭐</option>
                                <option value="2">2 ⭐⭐</option>
                                <option value="3">3 ⭐⭐⭐</option>
                                <option value="4">4 ⭐⭐⭐⭐</option>
                                <option value="5">5 ⭐⭐⭐⭐⭐</option>
                            </InputSelect>
                        </td>
                        <td><InputTextArea @bind-Value="item.Comments" class="form-control" id="@($"comments_{item.Id}")" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</EditForm>

@* un modal popup dialog para verificar si el usuario quiere proceder a crear la reseña *@
@if (DialogIsOpen)
{
    <Dialog Caption="Crear reseña"
    Message="¿Deseas proceder a crear la reseña con los dispositivos seleccionados?"
    OnClose="@OnDialogClose"
    Type=Dialog.Category.SaveNot>
    </Dialog>
}

@code {
    private string messageError = "";
    private bool hideErrors { get { return messageError.Length == 0; } }
    // El botón estará deshabilitado si no hay dispositivos en la lista de reseña
    private bool reviewButtonDisabled { get { return (review.ReviewItems == null || review.ReviewItems.Count == 0); } }
    private bool DialogIsOpen;
    private double AverageRating { 
        get {
            return review.ReviewItems.Any() ? review.ReviewItems.Average(ri => ri.Rating) : 0;
        }
    }
    
    private void ModifyReviewItems() {
        navigation.NavigateTo("/review/selectDevicesForReview");  // CAMBIADO
    }
    
    // Asumiendo que ReviewForCreateDTO está disponible
    private ReviewForCreateDTO review => reviewState.Review;

    private void OpenDialog()
    {
        DialogIsOpen = true;
    }

    private async Task OnDialogClose(bool isOk) {

        DialogIsOpen = false;
        if (isOk) {
            // Procesar los datos introducidos por el usuario si son válidos
            if (review.ReviewItems.Count > 0) {
                try {
                    // 💡 Se recomienda añadir un log aquí para confirmar que la ejecución llega a este punto
                    logger.LogInformation("Intentando crear reseña...");
                    
                    var reviewCreated = await apiclient.CreateReviewAsync(review);
                    reviewState.ReviewProcessed();
                    navigation.NavigateTo($"/review/detailReview/?ReviewID={reviewCreated.Id}");  // CAMBIADO
                }
                catch (ApiException<ValidationProblemDetails> apiexceptionvalidation) {

                    if (apiexceptionvalidation.Result.Errors.Values != null) {
                        messageError = "Errores de Validación: ";
                        foreach (var errors in apiexceptionvalidation.Result.Errors.Values)
                            messageError = string.Join("(*) ", messageError, string.Join(" (*) ", errors));
                    }
                    // Forzar a Blazor a re-renderizar para mostrar los errores si el estado de los errores cambia
                    StateHasChanged();
                }
                catch (ApiException apiexception) {
                    // Si es otro error de API (400, 500), pero sin detalles de validación
                    messageError = "¡Error mientras se procesaba tu solicitud, por favor inténtalo de nuevo más tarde!";
                    StateHasChanged();
                }
                catch (Exception ex)
                {
                    // Manejo de errores genérico (ej. problemas de red, excepción inesperada)
                    logger.LogError(ex, "Error crítico durante la creación de la reseña.");
                    messageError = "¡Error crítico inesperado! Consulta el log del servidor.";
                    StateHasChanged();
                }

            }
        }
    }

    protected override async Task OnInitializedAsync() {

        if (authenticationState is not null) {
            var authState = await authenticationState;
            var user = authState?.User;

            if (user is not null) {
                if (user.Identity is not null && user.Identity.IsAuthenticated) {
                    // Si el usuario está autenticado, podemos usar su email como nombre de usuario
                    // Si el usuario ya había escrito un nombre, lo mantiene.
                    review.CustomerUserName ??= user.Identity.Name;
                }
            }
            // Asegurar que las propiedades no sean nulas para evitar advertencias de binding
            // Aunque con 'ReviewForCreateDTO' no deberían ser nulas, es una buena práctica:
            review.ReviewTitle ??= string.Empty;
            review.CustomerCountry ??= string.Empty;
            review.CustomerUserName ??= string.Empty;

        }
    }

    [CascadingParameter]
    private Task<AuthenticationState>? authenticationState { get; set; }
}